!!!
%html
  %head
    %title Voxe.org
    %meta{name: "description", content: "Comparer les programmes avant de voter."}
    %meta{name: "google-site-verification", content: "dXr_wFt6WKG3hpwKnDSBz0FA_21NqGnaKRmAQ-1G8Rc"}
    %meta{charset: "UTF-8"}
    %link{rel: "shortcut icon", href: "#{asset_path('web/favicon.ico')}"}
    = stylesheet_link_tag "web"
    = javascript_include_tag "web"
    = render "layouts/partials/google_analytics"
    = render "layouts/partials/chartbeat_header"
  %body{:class => "#{controller_name} #{action_name}"}
    = render 'layouts/partials/facebook.html'
    
    #appstores
      = link_to_app_store image_tag("web/app-store-fr-small.png")
      = link_to_android_market image_tag("web/android-market-small.png")
        
    #empire-state-building
      .top-container
        #app
          = link_to "Voxe", root_path
          #tweet-button
            <a href="https://twitter.com/share" class="twitter-share-button" data-url="http://voxe.org" data-text="Voxe.org - le comparateur neutre de programmes politiques" data-via="voxe">Tweet</a>
          #facebook-button
            <div class="fb-like" data-href="https://www.facebook.com/joinvoxe" data-send="false" data-layout="button_count" data-width="120" data-show-faces="false"></div>

        %ul#nav
          %li= link_to "Projet", about_path
          %li ·
          %li= link_to "Sources", how_path
          %li ·
          %li= link_to "Soutenir", "http://www.kisskissbankbank.com/projects/voxe-org-le-comparateur-neutre-des-programmes-politiques", target: "_blank", class: 'support'
          %li · 
          %li= link_to "Apps", apps_path
          %li ·
          %li= link_to "API", platform_path, target: "_blank"
          %li ·
          %li= link_to "Hackathon", "http://checkthis.com/kp66", target: "_blank"
          %li ·
      #top
        = link_to image_tag('icons/32.png', valign: "middle"), root_path
    = yield

    = render "layouts/partials/chartbeat_body"
    = render "layouts/partials/twitter"