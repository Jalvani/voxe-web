= form_for [:admin, @candidate] do |f|
  -if @candidate.errors.any?
    #error_explanation
      %h2= "#{pluralize(@candidate.errors.count, "error")} prohibited this candidate from being saved:"
      %ul
        - @candidate.errors.full_messages.each do |msg|
          %li= msg

  .clearfix
    = f.label :first_name
    .input= f.text_field :first_name

  .clearfix
    = f.label :last_name
    .input= f.text_field :last_name

  = f.fields_for :photos do |photo_f|
    = render 'photo_fields', f: photo_f
  .offset1= link_to_add_fields "Add an image", f, :photos

  .actions
    = f.submit class: 'btn primary'
