.row
  .span16
    %p= link_to "Add an user", [:new, :admin, :user]

    %table
      %tr
        %th Email
        %th Admin ?
        %th Actions
      - for user in @users do
        %tr
          %td= user.email
          %td= user.admin? ? 'Admin' : ''
          %td
            = link_to "Edit", [:edit, :admin, user]
            |
            = link_to "Destroy", [:admin, user], method: :delete, confirm: "Are you sure to destroy #{user.email} ?"
