#candidates-list-template
  .nav-bar
    .title {{election.name}}
    %a.button.right Compare
  
  .table-view-container
    .table-view
      %ul.candidates
        :plain
          {{#election.candidates}}
            <li candidate-id="{{id}}">
              <div class="image"><img src="{{photo.sizes.small.url}}" width="40px" height="40px" /></div>
              <div class="name">{{firstName}} {{lastName}}</div>
            </li>
          {{/election.candidates}}
        
#themes-list-template
  .nav-bar
    .title Themes
  
  .table-view-container
    .table-view
      %ul.themes
        :plain
          {{#election.themes}}
            <li theme-id="{{id}}">
              <div class="icon"><img src="{{photo.sizes.small.url}}" width="44px" height="44px" /></div>
              <div class="name">{{name}}</div>
            </li>
          {{/election.themes}}

#propositions-template
  .nav-bar
    %a.button.left  ‚Üê Themes
    .title {{#theme}}{{name}}{{/theme}}

  .table-view-container
    .table-view
      :plain
        {{#categories}}
          <div class="category">
            <div class="category-name">{{name}}</div>
            {{#sections}}
              <div class="section">               
                <div class="section-name">{{name}}</div>
                {{#candidates}}
                  <div class="candidates">
                    {{firstName}} {{lastName}}
            
                    {{#propositions}}
                      <div class="candidates">
                        {{text}}
                      </div>
                    {{/propositions}}
                  </div>
                {{/candidates}}
              </div>
            {{/sections}}
          </div>
        {{/categories}}