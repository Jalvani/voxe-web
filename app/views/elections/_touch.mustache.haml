#candidates-list-template
  .nav-bar
    .title {{election.name}}
    %a.button.right Compare
  
  .table-view-container
    .table-view
      %ul.candidates
        :plain
          {{#election.candidates}}
            <li candidate-id="{{id}}">
              <div class="image"><img src="{{photo.sizes.small.url}}" width="40px" height="40px" /></div>
              <div class="name">{{firstName}} {{lastName}}</div>
            </li>
          {{/election.candidates}}
        
#tags-list-template
  .nav-bar
    .title Themes
  
  .table-view-container
    .table-view
      %ul.tags
        :plain
          {{#election.tags}}
            <li tag-id="{{id}}">
              <div class="icon"><img src="{{icon.sizes.small.url}}" width="44px" height="44px" /></div>
              <div class="name">{{name}}</div>
            </li>
          {{/election.tags}}
          
#compare-template
  .nav-bar
    %a.button.left  ‚Üê Themes
    .title {{#tag}}{{name}}{{/tag}}
    
  .table-view-container
    .table-view

#propositions-template
  :plain
    {{#categories}}
      <div class="category">
        <div class="category-name">{{name}}</div>
        {{#sections}}
          <div class="section">               
            <div class="section-name">{{name}}</div>
            {{#candidates}}
              <div class="candidate">
                <div class="photo">
                  <img src="{{photo.sizes.small.url}}" width="44px" height="44px" />
                </div>
        
                {{#propositions}}
                  <div class="proposition">
                    {{text}}
                  </div>
                {{/propositions}}
              </div>
            {{/candidates}}
          </div>
        {{/sections}}
      </div>
    {{/categories}}