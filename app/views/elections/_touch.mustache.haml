#candidacies-list-template
  .nav-bar
    .title {{election.name}}
    %a.button.right Compare
  
  .table-view-container
    .table-view
      %ul.candidacies
        :plain
          {{#election.candidacies}}
            <li candidacy-id="{{id}}">
              {{#candidates}}
                <div class="image"><img src="{{photo.sizes.small.url}}" width="40px" height="40px" /></div>
                <div class="name">{{firstName}} {{lastName}}</div>
              {{/candidates}}
            </li>
          {{/election.candidacies}}
        
#tags-list-template
  .nav-bar
    .title Themes
  
  .table-view-container
    .table-view
      %ul.tags
        :plain
          {{#tags}}
            <li tag-id="{{id}}">
              <div class="icon"><img src="{{icon.prefix}}64{{icon.name}}" width="44px" height="44px" /></div>
              <div class="name">{{name}}</div>
            </li>
          {{/tags}}
          
#compare-template
  .nav-bar
    %a.button.left  ‚Üê Themes
    .title {{#tag}}{{name}}{{/tag}}
    
  .table-view-container
    .table-view

#propositions-template
  :plain
    {{#categories}}
      <div class="category">
        <div class="category-name">{{name}}</div>
        {{#sections}}
          <div class="section">               
            <div class="section-name">{{name}}</div>
            {{#candidacies}}
              <div class="candidacy">
                {{#candidates}}
                  <div class="photo">
                    <img src="{{photo.sizes.small.url}}" width="44px" height="44px" />
                  </div>
                {{/candidates}}
        
                {{#propositions}}
                  <div class="proposition">
                    {{text}}
                  </div>
                {{/propositions}}
              </div>
            {{/candidacies}}
          </div>
        {{/sections}}
      </div>
    {{/categories}}