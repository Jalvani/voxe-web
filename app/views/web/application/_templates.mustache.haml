      <form>
        <textarea />
        <a href="#" class="button">Commenter</a>
      </form>
    {{/user.token}}
    
    {{^user.token}}
      <a href="#" class="session">Connectez-vous ou créez un compte pour ajouter un commentaire</a>
    {{/user.token}}
    
%script#comments-template{type: "text/html"}
  :plain
    <div class="comments"></div>
    <div class="comment-form"></div>
  
%script#comment-template{type: "text/html"}
  :plain
    {{#comment}}
      {{#user.picture}}<img src="{{user.picture}}" width="16" height="16" valign="middle" />{{/user.picture}}
      <span>{{user.name}}</span> {{text}}
      <div class="comment-actions"><a class="remove" href="#">X</a></div>
    {{/comment}}
    
%script#user-profile-template{type: "text/html"}
  :plain
    {{#user.name}}
      {{#user.picture}}<img src="{{user.picture}}" width="16" height="16" valign="middle" />{{/user.picture}}
      {{user.name}} <a href="#" title="Logout" class="logout">[x]</a>
    {{/user.name}}

    {{^user.name}}
      <a href="#" class="connect">Connexion</a>
    {{/user.name}}
    
%script#users-new-template{type: "text/html"}
  :plain  
    <div class="logo">#{image_tag "icons/64.png"}</div>
    
    <div class="fb-connect" data-scope="#{Settings.fb_defaults.scope}">Facebook</div>
    
    <div class="ribbon">Pas encore sur Voxe? S'inscrire.</div>
    <div class="fields">
      <div class="field"><input type='text' name='name' placeholder='Nom complet' /></div>
      <div class="field"><input type='text' name='email' placeholder='Adresse e-mail' /></div>
      <div class="field"><input type='password' name='password' placeholder='Mot de passe' /></div>
        
      <div class="button"><a href="#" class="button">S'inscrire</a></div>
      <ul class="errors"></ul>
    </div>
    
