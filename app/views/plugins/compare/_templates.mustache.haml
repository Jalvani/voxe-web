#candidacies-list-template
  %ul
    :plain
      {{#candidacies}}
        <li candidacy-id="{{id}}">
          {{#candidates}}
            <div class="icon"><img src="{{photo.sizes.small.url}}" width="32px" height="32px" /></div>
            <div class="name">
              <input type="checkbox" />
              {{firstName}} {{lastName}}
            </div>
          {{/candidates}}
        </li>
      {{/candidacies}}
        
#tags-list-template
  %ul
    :plain
      {{#tags}}
        <li tag-id="{{id}}">
          <div class="icon"><img src="{{icon.prefix}}64{{icon.name}}" width="32px" height="32px" /></div>
          <div class="name">{{name}}</div>
        </li>
      {{/tags}}
      
#propositions-template
  :plain
    {{#categories}}
      <div class="category">
        <div class="category-name">{{name}}</div>
        {{#sections}}
          <div class="section">               
            <div class="section-name">{{name}}</div>
            {{#candidacies}}
              <div class="candidacy">
                {{#candidates}}
                  <div class="photo">
                    <img src="{{photo.sizes.small.url}}" width="44px" height="44px" />
                  </div>
                {{/candidates}}

                {{#propositions}}
                  <div class="proposition">
                    {{text}}
                  </div>
                {{/propositions}}
              </div>
            {{/candidacies}}
          </div>
        {{/sections}}
      </div>
    {{/categories}}