!!! HTML
%html#v1
  %head
    /= stylesheet_link_tag "bootstrap-1.3.0.min.css"
    = stylesheet_link_tag "ux"
  %body
    #topbar
      #topbar-inner
        Plato
          
    #candidates.scrollbar
      .inner
        %ul
          - 12.times do |i|
            %li
              .icon= image_tag 'candidate.png', :size => "38x38"
              .name= link_to 'Nicolas Sarkozy', ""
              .info UMP
        
    #compare
      #compare-header
        .inner
          .theme
            Foreign Politics
          %ul.candidates
            - 3.times do |i|
              %li
                .image= image_tag 'candidate.png', :size => "38x38"
                .name Nicolas Sarkozy
            
      #compare-propositions.scrollbar
        - 10.times do |i|
          .section
            .theme Africa
            - 3.times do |i|
              .propositions
                %ul.propositions-list
                  - ((5*rand()).to_i).times do |i|
                    %li Vestibulum id ligula porta felis euismod semper eget lacinia odio sem nec elit. Donec id elit non mi porta gravida at eget metus.
      
    #themes.scrollbar
      .inner
        %ul
          - 10.times do |i|
            %li
              .theme= link_to 'Foreign Policy', ""
              - if i == 1
                - 10.times do |i|
                  .section Africa